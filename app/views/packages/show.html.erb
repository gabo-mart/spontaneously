<p id="notice"><%= notice %></p>
<div class="pagecontainer">
<p>
  <strong>Itinerary:</strong>
  <%= @package.itinerary %>
</p>

<p>
  <strong>Ship:</strong>
  <%= @package.ship.name %>
</p>

<p>
  <strong>Dates:</strong>
  <%= @package.dates %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @package.duration %>
</p>

<p>
  <strong>Rooms:</strong>
  <%= @package.rooms %>
</p>

<p>
  <strong>People:</strong>
  <%= @package.people %>
</p>

<p>
  <strong>Room type:</strong>
  <%= @package.room_type %>
</p>



<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= "$" + @package.price.to_s %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key='pk_test_wsu2jhJ68jqECNhfJzaQnwRS'
          data-description='<%= @package.duration %> - <%= @package.itinerary %>'
          data-amount=<%= @package.price.to_f * 100 %>
          data-locale="auto"></script>
<% end %>

<% if current_vendor == @vendor %>
  <%= link_to 'Edit', edit_vendor_package_path(@vendor, @package) %> |
<% end %>
<%= link_to 'Back', root_path %>


</div>
