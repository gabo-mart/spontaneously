<%= form_for([@ship, @review]) do |f| %>

  <div class="field">
  <div id="star-rating"></div>
    <%#= f.label :rating %><br>
    <%#= f.number_field :rating, max: 5, min: 0 %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, max: 5, min: 0, class: "materialize-textarea" %>
  </div>


  <div class="actions">
    <a class="waves-effect waves-light btn-large"><%= f.submit "Submit"%></a>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
