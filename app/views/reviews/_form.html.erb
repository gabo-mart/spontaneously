<%= form_for(@review) do |f| %>

  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating, max: 5, min: 0 %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, max: 5, min: 0, class: "materialize-textarea" %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= hidden_field :ship_id, @ship.id %>
  <%= hidden_field :vendor_id, @ship.vendor.id %>

  <div class="actions">
    <a class="waves-effect waves-light btn-large"><%= f.submit "Submit"%></a>
  </div>
<% end %>
