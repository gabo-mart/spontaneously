
<%= form_for([@vendor, @package]) do |f| %>


  <div class="field">
    <%= f.label :itinerary %><br>
    <%= f.text_field :itinerary %>
  </div>
  <!-- <div class="field">
    <%#= f.label :ship %><br>
    <%#= f.text_field :ship %>
  </div> -->
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :rooms %><br>
    <%= f.number_field :rooms %>
  </div>
  <div class="field">
    <%= f.label :people %><br>
    <%= f.number_field :people %>
  </div>
  <div class="field">
    <%= f.label :room_type %><br>
    <%= f.text_field :room_type %>
  </div>


  <div class="input-field">
    <%= f.select(:ship_id, Ship.where(vendor_id: current_vendor).collect {|u| [u.name, u.id]}, :prompt => 'Choose a Ship') %>
    <%#= select("Ship", "ship_id", Ship.all.collect {|s| [ s.name, s.id ] }) %>
    <!-- <label>Ship </label> -->
  </div>

  <div class="file-field input-field">
    <div class="btn">
      <span>File</span>
      <%= f.file_field :avatar %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>

    
    <div class="actions">
      <a class="waves-effect waves-light btn-large"><%= f.submit "Submit"%></a>
    </div>
<% end %>
