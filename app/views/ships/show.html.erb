<div class="pagecontainer">

<h1>  Ship Show </h1>
<div class="shipcontainer">
<div class="shipinfo">
<p>
  <strong>Ship:</strong>
  <%= @ship.name %>
</p>

<ul>
	<li><strong>Tonnage: </strong><%= @ship.tonnage %></li>
  <li><strong>Length in feet: </strong><%= @ship.length_in_feet %></li>
  <li><strong>Max Beam: </strong><%= @ship.max_beam %></li>
  <li><strong>Guest capacity: </strong><%= @ship.guest_capacity %></li>
  <li><strong>Onboard crew: </strong><%= @ship.onboard_crew %></li>
  <li><strong>Description: </strong><%= @ship.description %></li>
</ul>
</div>
<div class="boatpic">
  <%= image_tag(@ship.avatar.medium) %>
</div>
</div>
	<% if @ship.vendor == current_vendor %>
		<%= link_to 'Edit', edit_vendor_ship_path(current_vendor.id, @ship.id) %>
	<% end %> |

<%= link_to 'Back to Dashboard', vendor_path(params[:vendor_id]) %>
</div>
